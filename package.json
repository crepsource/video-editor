{
  "name": "video-editor",
  "version": "1.0.0",
  "description": "AI-powered video analysis and intelligent frame extraction system for content creators",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:performance": "jest --testPathPattern=performance --runInBand",
    "test:ci": "jest --ci --coverage --watchAll=false --maxWorkers=2",
    "test:db": "ts-node-dev --transpile-only src/scripts/test-database.ts",
    "test:composition": "ts-node-dev --transpile-only src/scripts/test-composition.ts",
    "test:technical": "ts-node-dev --transpile-only src/scripts/test-technical-quality.ts",
    "test:scene": "ts-node-dev --transpile-only src/scripts/test-scene-classifier.ts",
    "test:engagement": "ts-node-dev --transpile-only src/scripts/test-engagement-calculator.ts",
    "test:cache": "ts-node-dev --transpile-only src/scripts/test-cache-manager.ts",
    "test:storage": "ts-node-dev --transpile-only src/scripts/test-storage-optimizer.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "keywords": [
    "video",
    "editor",
    "ai",
    "frame-extraction",
    "gpt-4-vision",
    "content-creation",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.21",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.0",
    "@types/uuid": "^9.0.0",
    "jest-html-reporters": "^3.1.0",
    "jest-watch-typeahead": "^2.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.40.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "dotenv": "^16.3.0",
    "fluent-ffmpeg": "^2.1.2",
    "openai": "^4.20.0",
    "pg": "^8.11.0",
    "redis": "^4.6.0",
    "sharp": "^0.32.0",
    "uuid": "^9.0.0"
  }
}
